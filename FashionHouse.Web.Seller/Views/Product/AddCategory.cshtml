@model FashionHouse.Data.DbModel.ProductCategory

@using (Html.BeginForm("AddCategory", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "form-text text-muted" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "form-text text-muted " })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "form-text text-muted" })
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "form-text text-muted" })
    </div>
    <hr>
    <input type="submit" value="Отправить" class="btn btn-success" />
} 